<?xml version="1.0" encoding="UTF-8"?>

<zk>
    <richlet>
        <richlet-name>StudioRichlet</richlet-name>
        <richlet-class>org.web4thejob.studio.http.StudioRichlet</richlet-class>
    </richlet>

    <richlet-mapping>
        <richlet-name>StudioRichlet</richlet-name>
        <url-pattern>/*</url-pattern>
    </richlet-mapping>

    <!--
        <listener>
            <listener-class>org.web4thejob.studio.support.DesktopInitListener</listener-class>
        </listener>
    -->
    <system-config>
        <ui-factory-class>org.web4thejob.studio.canvas.CanvasUiFactory</ui-factory-class>
    </system-config>

    <client-config>
        <debug-js>true</debug-js>
    </client-config>

    <preference>
        <name>org.zkoss.zk.ui.WebApp.name</name>
        <value>My Killer Webapp</value>
    </preference>
</zk>